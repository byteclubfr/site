{
  "name": "byteclub-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run dirs && npm run css && npm run html && npm run img && npm run js",
    "clean": "rm -rf build",
    "css": "cp src/css/site.css build/css",
    "dirs": "mkdir -p build/js && mkdir -p build/css",
    "deploy": "s3-upload",
    "html": "cp src/*.html build",
    "img": "cp -r src/img build",
    "jquery": "cat src/js/jquery.* | uglifyjs -o build/js/jquery-plugins.js",
    "js": "npm run jquery && cp src/js/leaflet.js build/js && cp src/js/modernizr.custom.22896.js build/js && cp src/js/parsley.min.js build/js && uglifyjs src/js/start.js -o build/js/start.min.js",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "scss": "compass watch",
    "start": "http-server build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmtm/site.git"
  },
  "author": "ByteClub",
  "bugs": {
    "url": "https://github.com/lmtm/site/issues"
  },
  "homepage": "https://github.com/lmtm/site#readme",
  "devDependencies": {
    "http-server": "^0.8.5",
    "s3-upload": "0.0.3",
    "uglify-js": "^2.4.24"
  }
}
