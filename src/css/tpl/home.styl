/*
    HOMEPAGE
*/

.lnk-more {
	a {
		@extend .btn;
		display: inline-block;
		position: relative;
		text-decoration: none;
		color: $color-white;
		background: $color-orange;
	}
	@media (max-width: 70em) {
		padding: 50px 0 0;
		clear: both;
		text-align: center;
		a {
			display: block;
		}
	}
	@media (min-width: 70em) {
		position: absolute;
		top: 50%;
		right: 0;
		margin-top: -35px;
		a {
			padding: 0;
			width: 70px;
			height: 70px;
			span {
				display: none;
			}
			&:before {
				content: '+';
				display: block;
				font-size: 6em;
				height: 70px;
				position: relative;
				text-align: center;
				top: 25%;
				width: 70px;
			}
		}
	}
}

/* Services */
.home-services {
	background: $color-light-brown;
	.title-main {
		color: $color-white;
	}
}
.home-services-list {
	@media (min-width: 50em) {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
	}
}
.home-service {
	margin-bottom: 2em;
	text-align: left;
	@media (min-width: 50em) {
		width: 48%;
	}
}
.home-service-row {
	display: table;
}
.home-service-cell {
	display: table-cell;
	vertical-align: top;
}
.home-service-picto {
	display: inline-block;
	float: left;
	margin-right: 30px;
	width: 110px;
	height: 110px;
	line-height: 110px;
	border-radius: 110px;
	background: rgba(#fff,.2);
	text-align: center;
	i {
		color: #fff;
		vertical-align: middle;
	}
}
.home-service-title {
	@extend $font-titles;
	margin: 5px 0 10px;
	font-size: 26px;
	font-weight: 700;
	line-height: 1em;
	color: #fff;
}
.home-service-desc {
	text-align: left;
	color: #dbcac6;
	a {
		color: #fff;
		+ span {
			color: #fff;
		}
	}
}


/* Blog preview */
.home-blog {
	ul {
		margin: 0;
		padding: 0;
		list-style-type: none;
	}
	li {
		padding: 10px;
		margin: 0;
		a {
			display: inline-block;
			color: $color-brown;
			font-weight: bold;
			font-size: 22px;
			text-decoration: none;
			@media (max-width: 70em) {
				display: block;
			}
		}
		small {
			color: $color-light-black;
		}
	}
}
